@model TruckersRegistration.Model.Entity.Driver

@{
    ViewData["Title"] = "Cadastro";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Motoristas</h1>
    <form asp-action="Save" asp-controller="Driver" method="POST">
        
        <input type="hidden" class="form-control" asp-for="Id"/>
        <div class="form-group">
            <label for="Name">Nome</label>
            <div>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
        </div>
        <div class="form-group">
            <label for="Truck.Brand">Marca</label>
            <div>
                <input type="text" class="form-control" asp-for="Truck.Brand" />
            </div>
        </div>
        <div class="form-group">
            <label for="Truck.Model">Modelo</label>
            <div>
                <input type="text" class="form-control" asp-for="Truck.Model" />
            </div>
        </div>
        <div class="form-group">
            <label for="Truck.Plate">Placa</label>
            <div>
                <input type="text" class="form-control" asp-for="Truck.Plate" />
            </div>
        </div>
        <div class="form-group">
            <label for="Truck.Axles">Eixo</label>
            <div>
                <input type="text" class="form-control" asp-for="Truck.Axles" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.CEP">CEP</label>
            <div>
                <input type="text" class="form-control" asp-for="Address.CEP" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.Street">Rua</label>
            <div>
                <input type="text" class="form-control" asp-for="Address.Street" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.Number">Numero</label>
            <div>
                <input type="number" class="form-control" asp-for="Address.Number" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.Neighborhood">Bairro</label>
            <div>
                <input type="text" class="form-control" asp-for="Address.Neighborhood" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.City">Cidade</label>
            <div>
                <input type="text" class="form-control" asp-for="Address.City" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.State">Estado</label>
            <div>
                <input type="text" class="form-control" asp-for="Address.State" />
            </div>
        </div>
        <div class="form-group">
            <label for="Address.Country">País</label>
            <div>
                <input type="text" class="form-control" asp-for="Address.Country" />
            </div>
        </div>
        <div class="form-group">
            <div>
                <button class="btn btn-success">Salvar</button>
            </div>
        </div>
    </form>
</div>